{%- macro assembly(samples) %}

  {% set pairs = [] %}
  {% for rgsm, group in samples.values() | groupby('rgsm') %}
    {% set pair = {'rgsm': rgsm} %}
    {% do pair.update({'ont': []}) %}
    {% do pair.update({'pacbio': []}) %}
    {% do pair.update({'short': []}) %}
    {% set log_msg %}Collecting sequencing data types for {{ rgsm }}, we will then attempt an assembly{% endset %}
    {{ log(log_msg, level='WARNING') }}
    {% for sample in group %}
      {% set log_msg %}Parsing {{ sample.name }}{% endset %}
      {{ log(log_msg, level='WARNING') }}
      {% if sample.rgpl|lower in ('ont') %}
        {% do pair.ont.append(sample) %}
        {% set log_msg %}{{ sample.name }} was added to ont list{% endset %}
        {{ log(log_msg, level='WARNING') }}
      {% elif sample.rgpl|lower in ('hifi', 'ccs', 'clr') %}
        {% do pair.pacbio.append(sample) %}
        {% set log_msg %}{{ sample.name }} was added to pacbio list{% endset %}
        {{ log(log_msg, level='WARNING') }}
      {% else %}
        {% do pair.short.append(sample) %}
        {% set log_msg %}{{ sample.name }} did not match ont or pacbio patterns, so it is assumed to be short read data{% endset %}
        {{ log(log_msg, level='WARNING') }}
      {% endif %}
    {% endfor %}
    {% do pairs.append(pair) %}
  {% endfor %}

{% endmacro %}

