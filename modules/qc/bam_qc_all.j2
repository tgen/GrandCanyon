  methods: Index stats for {{ sample.name }} ({{ aligner }}) were generated with samtools idxstats.
  input:
    - {{ bam }}
    - {{ bam_index }}
  output:
    - {{ output }}
    {% if libraryCount == 1 %}
    - {{ sample_lb_output }}
    {% endif %}
  {% if bam_level is sameas false %}
  reset: predecessors
  {% endif %}
  walltime: "4:00:00"
  cpus: 1
  mem: 2G
  queue_preset: "DEFAULT"
