{% macro hifi_cnv(sample) %}

{%- set bam %}temp/{{ sample.gltype }}/alignment/minimap2/{{ sample.name }}/{{ sample.name }}.minimap2.bam{% endset %}
{%- set temp_dir %}temp/{{ sample.gltype }}/constitutional_copy_number/hifi_cnv/{{ sample.name }}_minimap2{% endset %}
{%- set results_dir %}{{ sample.gltype }}/constitutional_copy_number/hifi_cnv/{{ sample.name }}_minimap2{% endset %}

- name: hifi_cnv_{{ sample.name }}_minimap2
  input:
    - {{ bam }}
    - {{ bam }}.bai
    - {{ constants.grandcanyon.reference_fasta }}
  output:
    - {{ results_dir }}/{{ sample.name }}.hificnv.copynum.bedgraph
    - {{ results_dir }}/{{ sample.name }}.hificnv.depth.bw
    - {{ results_dir }}/{{ sample.name }}.hificnv.vcf.gz
  cpus: 16
  mem: 32G
  walltime: "24:00:00"
  queue_preset: "DEFAULT"
  container: {{ constants.tools.hificnv.container }}
  cmd: |
    set -eu
    set -o pipefail

    hificnv \
      --threads 8 \
      --ref {{ constants.grandcanyon.reference_fasta }} \
      --bam {{ bam }} \
      --output-prefix {{ results_dir }}/{{ sample.name }}

    mv {{ results_dir }}/{{ sample.name }}.{{ sample.rgsm }}.copynum.bedgraph {{ results_dir }}/{{ sample.name }}.hificnv.copynum.bedgraph
    mv {{ results_dir }}/{{ sample.name }}.{{ sample.rgsm }}.depth.bw {{ results_dir }}/{{ sample.name }}.hificnv.depth.bw
    mv {{ results_dir }}/{{ sample.name }}.{{ sample.rgsm }}.vcf.gz {{ results_dir }}/{{ sample.name }}.hificnv.vcf.gz

{% endmacro %}
