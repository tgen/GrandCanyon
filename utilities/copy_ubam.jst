{% macro copy_ubam(ubam) %}

- name: copy_ubams_{{ ubam.basename | replace(".", "_") }}
  input: {{ ubam.ubamPath }}
  output: temp/ubams/{{ ubam.basename }}
  retry: 2
  cpus: 6
  walltime: "4:00:00"
  queue_preset: "DATA-MOVER"
  container: {{ constants.tools.base.container }}
  digest: {{ constants.tools.base.digest }}
  cmd: |
    set -uev

    mkdir -p temp/ubams/

    rsync "{{ ubam.path }}" "temp/ubams/"

{% endmacro %}

